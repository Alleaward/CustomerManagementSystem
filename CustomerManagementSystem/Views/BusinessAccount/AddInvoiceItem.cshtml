@model CustomerManagementSystem.ViewModels.InvoiceItemVM

@{
    ViewBag.Title = "AddInvoiceItem";
    var businessNumber = ViewBag.BusinessNumber;
    var invoiceNumber = ViewBag.InvoiceNumber;
    var subtotal = ViewData["Subtotal"];
}

<h2>AddInvoiceItem</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>InvoiceItem</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <h5>Ordered Items:</h5>
    <ol>
        @foreach (var item in Model.Ordered)
        {
            <li>Item ID: @item.ItemId | Item Name: | Quantity: @item.ItemQuantity</li>
        }
    </ol>

    <select name="ItemNumber">
        @foreach (var item in Model.Items)
        {
            <option value=@item.ItemNumber>@item.ItemName</option>
        }
    </select>

    <div class="form-group">
        <div class="col-md-10">
            <p>Quantity / Hours:</p>
            <input name="ItemQuantity" type="number" />
        </div>
    </div>

    <p>Total Price: $@subtotal</p>

    <p>
        <a href="@Url.Action("AddItem/" + @businessNumber + "/" + invoiceNumber, "BusinessAccount")" class="">Add a new item to your database.</a>
    </p>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input name="submit" type="submit" value="Add Item to Order." class="btn btn-default" />
        </div>
    </div>

    <p>Notes: </p>
    <textarea name="Notes" value=""></textarea>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input name="submit" type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>

</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
