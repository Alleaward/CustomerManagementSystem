@model IEnumerable<CustomerManagementSystem.Models.BusinessAccount>
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Index";
    var userID = ViewBag.userId;
}

<h2>Select a business to manage.</h2>

<p>
    @Html.ActionLink("Add a business", "Create")
</p>
<table class="table">
    <p>Your userID is: @userID</p>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BusinessName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BusinessOwner)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Website)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Logo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ABN)
        </th>
        <th></th>
    </tr>

    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BusinessName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BusinessOwner)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Website)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Logo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ABN)
                </td>
                <td>
                    @Html.ActionLink("Select", "Edit", new { id = item.BusinessNumber }) 
                    |
                    @Html.ActionLink("Remove", "Delete", new { id = item.BusinessNumber })
                </td>
            </tr>
        }
    }
</table>
