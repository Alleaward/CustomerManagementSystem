@model IEnumerable<CustomerManagementSystem.Models.Item>

<div id="addItem" class="form-horizontal add-item">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <select name="ItemNumber" id="item-list">
        @foreach (var item in Model)
        {
            <option value=@item.ItemNumber>@item.ItemName | $@item.Cost | @item.ItemDescription</option>
        }
    </select>

    <div class="form-group">
        <div class="col-md-10">
            <p>Quantity:</p>
            <input id="item-qty" name="ItemQuantity" type="number" />
        </div>
    </div>

    <div id="addedItem"></div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input id="loadPartialView" type="button" value="+" class="btn btn-default" />
        </div>
    </div>
</div>


